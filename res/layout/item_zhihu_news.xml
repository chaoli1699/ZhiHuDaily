<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="20dp" 
    android:paddingRight="20dp"
    android:paddingBottom="10dp" >
    
    <ImageView 
        android:id="@+id/item_zhihu_news_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp" />
    
    <TextView 
        android:id="@+id/item_zhihu_news_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_zhihu_news_img"
        android:layout_alignTop="@id/item_zhihu_news_img"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:textSize="16sp"/>
    
    <TextView 
        android:id="@+id/item_zhihu_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/item_zhihu_news_img"
        android:textSize="12sp"
        android:layout_margin="20dp"/>
</RelativeLayout>
